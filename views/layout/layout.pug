    link(rel='stylesheet', href='/assets_owl_carousel/owlcarousel/assets/owl.carousel.min.css')
    link(rel='stylesheet', href='/assets_owl_carousel/owlcarousel/assets/owl.theme.default.min.css')
    // Extra margin padding
    link(rel='stylesheet', type='text/css', href='/css/extra-margin-padding.css')
    //DatePicker
    link(href="https://unpkg.com/gijgo@1.9.11/css/gijgo.min.css" rel="stylesheet" type="text/css")

    link(rel='stylesheet', type='text/css', href='/css/style.css')
  
  body
    // Just an image
    nav.navbar.navbar-kane-color.mb-20
      .container.container-custom
        a.navbar-brand.logo(href="/")
          img(src='/img/logo-kane-store.png' alt="")
        form.form-inline.search-box(name="search-form")
          input.form-control.search-input(type="search" placeholder="Search on store" aria-label="Search")
          button.search-button(type="submit")
            i.fas.fa-search
        .cart-store
          span.badge.badge-pill.badge-danger 1
          a(href="/cart")
            img(src="/img/cart-icon.png" width="45" height="45" alt="")
        .account-link
          .dropdown.dropdown-custom.show
            a#dropdownMenuLink(data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
              img(src=user? user.avatar:"/img/anonymous-user.png" width="45" height="45" alt="")
            if user
              .dropdown-menu(aria-labelledby="dropdownMenuLink")
                .triangle-dropdown-menu
                a.dropdown-item(href="#") Đơn mua
                a.dropdown-item(href="/user") Tài khoản của tôi
                a.dropdown-item.dropdown-item-note(href="/auth/logout") Đăng xuất
            else 
              
              .dropdown-menu(aria-labelledby="dropdownMenuLink")
                .triangle-dropdown-menu
                a.dropdown-item.dropdown-item-note(href="/auth/user/login") Đăng nhập

    block content
    footer
     .footer-top-block.mt-20.pt-20.overflow-h
      .container
        .row
          .col-12.col-sm-12.col-md-3.col-lg-3.col-xl-3
            h6.visible-sm.footer-title(data-toggle="collapse" data-target="#footer-one") Hỗ trợ Khách hàng
            h6.hidden-sm.footer-title Hỗ trợ Khách hàng
            #footer-one
              a.footer-link(href="#") Thẻ ưu đãi
              a.footer-link(href="#") Phiếu mua hàng
              a.footer-link(href="#") Trung tâm bảo hành
              a.footer-link(href="#") Thanh toán và giao hàng
              a.footer-link(href="#") Dịch vụ sữa chữa và bảo trì
          .col-12.col-sm-12.col-md-3.col-lg-3.col-xl-3
            h6.visible-sm.footer-title(data-toggle="collapse" data-target="#footer-two") Chính sách Mua hàng
            h6.hidden-sm.footer-title Chính sách Mua hàng
            #footer-two
              a.footer-link(href="#") Chính sách điện máy
              a.footer-link(href="#") Chính sách đổi hàng
              a.footer-link(href="#") Chính sách bảo hành
              a.footer-link(href="#") Chính sách thanh toán
              a.footer-link(href="#") Chính sách trả góp
              a.footer-link(href="#") Báo giá
          .col-12.col-sm-12.col-md-3.col-lg-3.col-xl-3
            h6.visible-sm.footer-title(data-toggle="collapse" data-target="#footer-three") Thông tin KaneStore
            h6.hidden-sm.footer-title Thông tin KaneStore
            #footer-three
              a.footer-link(href="#") Thông tin liên hệ
              a.footer-link(href="#") Giới thiệu
              a.footer-link(href="#") Hỏi đáp
              a.footer-link(href="#") Tin công nghệ
              a.footer-link(href="#") Tuyển dụng
          .col-12.col-sm-12.col-md-3.col-lg-3.col-xl-3
            h6.visible-sm.footer-title(data-toggle="collapse" data-target="#footer-four") Liên hệ
            #footer-four
              .footer-link(href="#")
                img.img-fluid(src="/img/da-dang-ky.png" alt="")
              .footer-mail-section
                span Liên hệ Hợp tác và Mua hàng:
                br
                a(href="mailto:contact@kanstore.vn") contact@kanstore.vn
              .footer-mail-section
                span Liên hệ Hợp tác và Mua hàng:
                br 
                a(href="mailto:contact@kanstore.vn") contact@kanstore.vn
        .row
          .footer-bottom-block
            .container
              .row
                .col-12.col-sm-12.col-md-5.col-lg-5.col-xl-5
                  h3.footer-company-title CÔNG TY CỔ PHẦN THƯƠNG MẠI DỊCH VỤ kanestore
                  | &copy2007 - 2018 Công Ty Cổ Phần Thương Mại - Dịch Vụ KaneStore / GPĐKKD số 0304998358 do Sở KHĐT TP.HCM cấp
                .col-12.col-sm-12.col-md-7.col-lg-7.col-xl-7.footer-address-block
