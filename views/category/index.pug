extends ../layout/admin-site

block content
    
  .breadcrumbs
    .col-sm-4
      .page-header.float-left
        .page-title
          h1 Quản trị
    .col-sm-8
      .page-header.float-right
        .page-title
          ol.breadcrumb.text-right
            li
              a(href="/admin/dashboard") Quản trị
            li.active
              a(href="/admin/category") Danh mục
  .content.mt-3
    .animated.fadeIn
      .row
        .col-md-12
          .card
            .card-header
              strong.card-title Danh sách sản phẩm
            .card-body
              table#bootstrap-data-table-export.table.table-striped.table-bordered
                thead
                  tr
                    th Tên danh mục
                    th Danh mục cha
                    th Mô tả
                    th Hành động
                tbody
                  each category in data
                    tr
                      td #{category.name}
                      td #{category.parent}
                      td #{category.description}													
                      td.action
                        form(method="post" action="/admin/category/update-form")
                          input(type="hidden" name="category" value=category)
                          button.btn.btn-action(type="submit")
                            i.fa.fa-pencil
                        a.btn.btn-action(href=`/admin/category/delete/${category._id}`)
                          i.fa.fa-trash-o
                        
