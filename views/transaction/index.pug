extends ../layout/admin-site

block content


  .breadcrumbs
    .col-sm-4
      .page-header.float-left
        .page-title
          h1 Quản trị
    .col-sm-8
      .page-header.float-right
        .page-title
          ol.breadcrumb.text-right
            li
              a(href="/admin/dashboard") Quản trị
            li.active
              a(href="/admin/transaction") Giao dịch
  .content.mt-3
    .animated.fadeIn
      .row
        .col-md-12
          .card
            .card-header
              strong.card-title Danh sách nhà cung cấp
            .card-body
              table#bootstrap-data-table-export.table.table-striped.table-bordered
                thead
                  tr
                    th Mã đơn hàng
                    th Khách hàng
                    th Tổng tiền
                    th Ngày tạo
                    th Trạng thái
                    th Action
                tbody
                  each transaction in transactions
                    tr
                      td #{transaction._id}
                      td #{transaction.firstname +" "+ transaction.lastname}
                      td #{transaction.totalPrice}
                      td #{transaction.create_time}
                      td #{transaction.status}
                      td.action
                        a.btn.btn-action(href=`/admin/transaction/view/${transaction._id}`)
                          i.fa.fa-eye
                        
