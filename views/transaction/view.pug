extends ../layout/admin-site

block content


  .breadcrumbs
    .col-sm-4
      .page-header.float-left
        .page-title
          h1 Dashboard
    .col-sm-8
      .page-header.float-right
        .page-title
          ol.breadcrumb.text-right
            li
              a(href="#") Dashboard
            li
              a(href="#") Table
            li.active Product
  .content.mt-3
    .animated.fadeIn
      .row
        each item, index in items
         .col-lg-4
          .card
            .card-header
              | Sản phẩm 
              strong #{index}
            .card-body.card-block
              .product-image
                img(src=item.item.image[Object.keys(item.item.image)[0]] alt="")
              strong Tên sản phẩm
              p #{item.item.name}
              strong Mô tả
              p
                | #{item.item.description}
              strong Giá sản phẩm
              p #{item.item.price}
