extends ../layout/layout

block content
  .container
    .col-12.col-md-6.offset-md-3
      .login-panel
        .login-title Register
        .login-content
          form(action="/auth/user/register" method="post" autocomplete="off")
            .form-group.row
              .col
                input.form-control.form-control-login(type="text" name="firstnameUser" placeholder=" Họ")
              .col
                input.form-control.form-control-login(type="text" name="lastnameUser" placeholder=" Tên")
            .form-group
              input.form-control.form-control-login(type="text" name="usernameUser" placeholder=" Username")
            .form-group
              input.form-control.form-control-login(type="password" name="passwordUser" placeholder=" Password")
            .form-group.row
              .col
                input.form-control.form-control-login(type="email" name="emailUser" placeholder=" Email")
              .col
                input.form-control.form-control-login(type="text" name="phoneUser" placeholder=" Số điện thoại")
            button.btn-login(type="submit") Đăng ký
